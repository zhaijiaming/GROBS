@using GROBS.App_Code
@using GROBS.Models
@using X.PagedList
@using X.PagedList.Mvc

@{
    ViewBag.Title = "采购单管理";
    Layout = "~/Views/Shared/_LayoutCustomer02.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $("tr").bind("dblclick", function () {
            var u_id = $(this).find('td').eq(0).find('input').val();
            //if (u_id != null) {
            //    var url_go = "/ord_dingdan/Edit/" + u_id;
            //    location.href = url_go;
            //}
        });
        $("#bt_addInfo").click(function () {
            var _cd = $("#closeday").val();
            var _cr = $("#closereason").val();
            if (_cd == "0")
                window.open("/ord_dingdan/customeradd", "_parent");
            else
                alert("今天停止下单服务，原因：" + _cr + "\r\n" + "如需进步资讯可联系客服！");
        });
        $("#bt_updateInfo").click(function () {
            var sDel = 0;
            var did = 0;
            $("#dt_active tr input[type=checkbox]").each(function () {
                if (this.checked) {
                    var _st = $(this).data("state");
                    if (Number(_st) != 10) {
                        alert("只有新建的订单才能编辑，如有特殊问题，需联络平台客服！");
                        sDel++;
                        return;
                    }
                    did = $(this).val();
                    sDel++;
                }
            });
            if (did == 0)
            {
                return;
            }
            if (sDel != 1) {
                alert("请选中一个订单");
            }
            else {
                location.href = "/ord_dingdan/customerorderedit/" + did;
            }
        });
        $("#bt_deleteInfo").click(function () {
            var sDel = "";
            $("#dt_active tr input[type=checkbox]").each(function () {
                if (this.checked) {
                    var _st = $(this).data("state");
                    if (Number(_st) > 10) {
                        alert("只有新建的订单才能删除，如需删除其他状态订单，需联络平台客服！");
                        return;
                    }
                    sDel = sDel + ", " + $(this).val()
                }
            });
            if (sDel.length < 2) {
                alert("请选择需要删除的订单！");
                return;
            }
            var url_go = "/ord_dingdan/deleteorder";
            $.ajax({
                async: true,
                beforeSend: function () {
                    ShowWait();
                },
                complete: function () {
                    HiddenWait();
                },
                type: "POST",
                url: url_go,
                data: {
                    sdel: sDel
                },
                success: function (data) {
                    if (data == 1) {
                        location.reload();
                    }
                    else {
                        alert("删除订单失败，请与客服联系！");
                    }
                }
            });
        });
        $("#bt_historyInfo").click(function () {
            window.open("/ord_dingdan/customerorderlist", "_blank");
        });
        $("#bt_qianInfo").click(function () {
            window.open("/ord_qianhuo/customerowelist", "_blank");
        });
        $("#bt_sendInfo").click(function () {
            window.open("/ord_fahuodan/fahuodanlist", "_blank");
        });
        $("#bt_collect").click(function () {
            var _sid = 0;
            var _sst = 0;
            $("#dt_active tbody tr input[type=checkbox]").each(function () {
                if (this.checked) {
                    _sid = $(this).val();
                    _sst = $(this).data("state");
                }
            });
            if (_sid == 0)
            {
                alert("请选择需要结算的订单！");
                return;
            }
            if (_sst > 16) {
                alert("该订单已经结算，无需再上传凭证！");
                return;
            }
            if (_sst == 0) {
                alert("该订单已作废，不能再上传凭证！");
                return;
            }
            if (_sst == 10) {
                alert("该订单未提交，请先提交订单！");
                return;
            }
            if (_sst == 12) {
                alert("该订单未批复，请等待客服人员批复！");
                return;
            }
            window.open("/ord_dingdan/uploadbankticket/"+_sid, "_parent");
        });
        $("#bt_refer").click(function () {
            var _sid = "";
            var _sst = 0;
            $("#dt_active tbody tr input[type=checkbox]").each(function () {
                if (this.checked) {
                    //_sid = $(this).val();
                    _sid = _sid + ", " + $(this).val()
                    _sst = $(this).data("state");
                }
            });
            //if (_sid == 0) {
            //    alert("请选择需要提交的订单！");
            //    return;
            //}
            if (_sst > 10) {
                alert("只有新建的订单才能提交");
                return;
            }
            if (_sid.length < 2) {
                alert("请选择需要提交的订单！");
                return;
            }
            if (_sst == 0) {
                alert("该订单已作废");
                return;
            }
            var url_go = "/ord_dingdan/referorder";
            $.ajax({
                async: true,
                beforeSend: function () {
                    ShowWait();
                },
                complete: function () {
                    HiddenWait();
                },
                type: "POST",
                url: url_go,
                data: {
                    _sid: _sid
                },
                success: function (data) {
                    if (data == 1) {
                        location.reload();
                    }
                    else {
                        alert("订单提交失败，请与客服联系！");
                    }
                }
            });
        });
        $("#bt_recieve").click(function () {
            var _i = 0;
            $("#dt_active tbody tr input[type=checkbox]").each(function () {
                if (this.checked) {
                    _i++;
                    _sid = $(this).val();
                    _sst = $(this).data("state");
                }
            });
            if (_i == 0) {
                alert("请选择需要收货的采购订单！");
                return;
            }
            if (_sst == 60) {
                var _sh = confirm("确定要进行收货吗？");
                if (_sh == true) {
                    $.ajax({
                        async: true,
                        beforeSend: function () {
                            ShowWait();
                        },
                        complete: function () {
                            HiddenWait();
                        },
                        type: "POST",
                        url: "/ord_dingdan/recievecheck",
                        data: {
                            did: _sid
                        },
                        success: function (data) {
                            if (data == 1) {
                                location.reload();
                            }
                            else {
                                alert("收货操作失败，请与客服联系！");
                            }
                        }
                    });
                }
            }
            else {
                alert("非正常收货状态，无法收货！");
            }
        });
    });

 
    //function spdetail(oid){
    //    var _durl="/ord_dingdanmx/edit/"+oid;
    //    window.open(_durl,"_blank");
    //}
</script>
<div id="loading"><img src="~/Imgs/wait.gif" alt="" />...系统正在加载数据,请耐心等待...</div>
<div class="page-content">
    <input type="hidden" id="closeday" value="@ViewBag.closeday"/>
    <input type="hidden" id="closereason" value="@ViewBag.closereason" />
    <div class="panel">
        <div class="panel-body">
            <div class="row">
                <p><i class="icon-user bigger-300 green"></i>&nbsp;&nbsp;<span class="bigger-150 blue">@ViewBag.customername</span></p>
            </div>
            <div class="row">
                <p class="align-center">
                    <button type="button" class="btn btn-primary btn-xs btn-app" id="bt_addInfo"><i class="icon-adn"></i>新增</button>
                    <button type="button" class="btn btn-primary btn-xs btn-app radius-4" id="bt_updateInfo"><i class="icon-edit"></i><b>编辑</b></button>
                    <button type="button" class="btn btn-primary btn-xs btn-app" id="bt_deleteInfo"><i class="icon-remove"></i>作废</button>
                    <button type="button" class="btn btn-primary btn-xs btn-app" id="bt_refer"><i class="icon-hand-up"></i>提交</button>
                    <button type="button" class="btn btn-primary btn-xs btn-app" id="bt_collect"><i class="icon-upload"></i>结算</button>
                    <button type="button" class="btn btn-primary btn-xs btn-app" id="bt_recieve"><i class="icon-shopping-cart"></i>收货</button>
                    <button type="button" class="btn btn-primary btn-xs btn-app" id="bt_refreshInfo" onclick="javascript: location.reload()"><i class="icon-refresh"></i>刷新</button>
                    <button type="button" class="btn btn-primary btn-xs btn-app" id="bt_historyInfo"><i class="icon-list"></i>历史</button>
                    <button type="button" class="btn btn-primary btn-xs btn-app" id="bt_sendInfo"><i class="icon-plane"></i>发货</button>
                    <button type="button" class="btn btn-primary btn-xs btn-app" id="bt_qianInfo"><i class="icon-truck"></i>欠货</button>
                    <a href="/ord_dingdan/CustomerCurrentOrderExportFile"><button type="button" class="btn btn-primary btn-xs btn-app" id="bt_export"><i class="icon-plane"></i>导出</button></a>
                </p>
            </div>
            <hr />
            <div class="row">
                <div class="col-sm-12">
                    <div class="table-wapper-all">
                        <div class="fixed-table-wapper">
                            <table class="table table-bordered table-condensed fixed-table-header"></table>
                        </div>
                        <div class="table-wapper">
                            <table class="table table-bordered table-condensed" id="dt_active">
                                <caption><i class="icon-play-circle"></i>正在执行的订单</caption>
                                <thead>
                                    <tr>
                                        <td></td>
                                        <td data-align="right" data-sortable="false">编号</td>
                                        <td data-search="true" data-sortable="false" >状态</td>
                                        <td>产品线</td>
                                        <td>订单类型</td>
                                        <td>客户单号</td>
                                        <td>下单日期</td>
                                        @*<td>联系人</td>
                                            <td>联系电话</td>
                                            <td>送货地址</td>*@
                                        <td>采购总数</td>
                                        @*<td>待发数量</td>*@
                                        <td>已发数量</td>
                                        <td>欠货数量</td>
                                        <td>采购金额</td>
                                        <td>折扣金额</td>
                                        <td>实付金额</td>
                                        <td>备注</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{  var i = 0;
                                        foreach (var item in ViewBag.ord_dingdan)
                                        {
                                            <tr>
                                                <td>
                                                    <label><input type="checkbox" value="@item.ID" data-state="@item.Zhuangtai"></label>
                                                </td>
                                                <td><a href="/ord_dingdan/customerorderinfo/@item.ID">@item.Bianhao</a></td>
                                                <td>@Html.GetCommonValue_ID("订单状态", (int)item.Zhuangtai)</td>
                                                <td>@item.Mingcheng</td>
                                                <td>@Html.GetCommonValue_ID("订单类型", (int)item.CGLX)</td>
                                                <td>@item.KehuDH</td>
                                                <td>@item.XiadanRQ</td>
                                                @*<td>@item.Lianxiren</td>
                                                    <td>@item.LianxiDH</td>
                                                    <td>@item.SonghuoDZ</td>*@
                                                <td>@item.ZongshuCG</td>
                                                <td>@ViewBag.fhsl[i]</td>
                                                <td>@String.Format("{0:N0}", ViewBag.fhsl[i] == "" ? "" : (item.ZongshuCG - float.Parse(ViewBag.fhsl[i])))</td>
                                                <td>@String.Format("{0:N}", item.Zongjine)</td>
                                                <td>@String.Format("{0:N}", item.ZhekouJE)</td>
                                                <td>@String.Format("{0:C}", item.Zongjine - (item.ZhekouJE == null ? 0 : item.ZhekouJE))</td>
                                                <td>@item.Beizhu</td>
                                            </tr>
                                            i++;
                                        }
                                    }                                 
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
