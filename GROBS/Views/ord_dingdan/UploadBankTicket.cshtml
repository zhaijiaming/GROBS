                alert("请选择需要上传的凭证！");
                return;
            }
            $.ajax({
                async: true,
                beforeSend: function () {
                    ShowWait();
                },
                complete: function () {
                    HiddenWait();
                },
                type: "POST",
                url: "/ord_dingdan/ticketupload",
                data: {
                    did: $("#ddid").val(),
                    dfl: $("#fkpz").val(),
                    payway: val,
                    zje: $("#je").val(),
                    zk: $("#zk").val(),
                    sl: $("#sl").val(),
                    str: str
                },
                success: function (data) {
                    if (data == 1) {
                        window.open("/ord_dingdan/customercurrentorder","_parent");
                    }
                    else if (data == -1) {
                        alert("传送参数失败，请重试！");
                    }
                    else if (data == -2) {
                        alert("非法操作，请重新登录后再试！");
                    }
                    else if (data == -3) {
                        alert("上传失败，请重试！");
                    }
                    else {
                        alert("上传凭证失败，请重试！");
                    }
                }
            });
        });
        $('input:radio[name="radio1"]').change(function () {
