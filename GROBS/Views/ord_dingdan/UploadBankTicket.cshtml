            }
            if (val == "全额付款") {
                $("#dt_sp tbody tr").each(function () {
                    var a_sl = $(this).find("td").eq(4).text();
                    var p_sl = $(this).find("td").eq(7).text();
                    if (a_sl != p_sl) {
                        str = str + $(this).find("td").eq(10).text() + "," + (Number(a_sl) - Number(p_sl)).toString() + ";";
                    }
