
@using GROBS.App_Code;
@using GROBS.Models;
@using X.PagedList;
@using X.PagedList.Mvc;
@{
    ViewBag.Title = "经销商客户";
    string _searchcondition = ViewBag.SearchCondition;
}
<script type="text/javascript">
    try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
    $(document).ready(function () {
        $("tr").bind("dblclick", function () {
            var u_id = $(this).find('td').eq(0).find('input').val();
            if (u_id != null) {
                var url_go = "/base_shouhuodanwei/Edit/" + u_id;
                location.href = url_go;
            }
        });
        $("#bt_gspedit").click(function () {
            var sendval = "";
            var stateinfo = "";
            $("tr input[type=checkbox]").each(function () {
                if (this.checked) {
                    sendval = $(this).val();
                    stateinfo = $(this).parent().parent().parent().find("td").eq(1).html();
                }
            });
            if (sendval == "") {
                alert("请选择需要进行修改的资料！");
                return;
            }
            if (stateinfo !== "已通过") {
                alert("未通过的信息，不能使用GSP进行修改！");
                return;
            }
            window.open("/quan_gspshdw/edit/" + sendval);
        });
        $("#bt_sendcheck").click(function () {
            var sendval = "";
            $("tr input[type=checkbox]").each(function () {
                if (this.checked) {
                    sendval = sendval + $(this).val() + ",";
                }
            });
            $.ajax({
                async: true,
                beforeSend: function () {
                    ShowWait();
                },
                complete: function () {
                    HiddenWait();
                },
                type: "POST",
                url: "/quan_shouyingsq/checkadd",
                data: {
                    checkval: sendval,
                    checktype: "4"
                },
                success: function (data) {
                    if (data != "ok")
                        alert("送审失败，请重新上传！");
                    else
                        window.location.reload();
                }
            });
        });
        //判断照片是否存在
        var num = $("#mydatatable tr").length - 1;
        for (var i = 0; i < num; i++) {
            //营业执照
            var val_yyzzTP = $(".val_yyzzTP").eq(i).val();
            if (val_yyzzTP == "" || val_yyzzTP == null) {
                $(".YingyezhizhaoTP").eq(i).removeAttr("href");
                $(".YingyezhizhaoTP").eq(i).html("暂无");
            } else {
                $(".YingyezhizhaoTP").eq(i).html("浏览");
            }
            //经营许可
            var val_jyxkTP = $(".val_jyxkTP").eq(i).val();
            if (val_jyxkTP == "" || val_jyxkTP == null) {

                $(".JingyingxukeTP").eq(i).removeAttr("href");
                $(".JingyingxukeTP").eq(i).html("暂无");
            } else {
                $(".JingyingxukeTP").eq(i).html("浏览");
            }
        }
        //table样式
        table_config(mydatatable);
        trResize();//初始化表头
    });
    function AddInfo() {
        location.href = "/base_shouhuodanwei/Add";
    }
    function EditInfo() {
        $("#mydatatable tr input[type=checkbox]").each(function () {
            if (this.checked)
                location.href = "/base_shouhuodanwei/Edit/" + $(this).val();
        });
    }
    function DelInfo() {
        var sDel = "";
        $("#mydatatable tr input[type=checkbox]").each(function () {
            if (this.checked)
                sDel = sDel + ", " + $(this).val()
        });
        if (sDel.length < 2)
            return;
        var url_go = "/base_shouhuodanwei/Delete/?del=" + sDel;
        location.href = url_go;
    }
</script>
@{
    List<SearchConditionModel> scms = new List<SearchConditionModel>();
    if (_searchcondition == null || _searchcondition == "")
    {
        SearchConditionModel scm = new SearchConditionModel();
        scm.ItemCode = "HuozhuID";
        scm.ItemShowName = "huozhuid";
        scm.ItemTitle = "货主";
        scm.ItemType = "货主.都有";
        scms.Add(scm);

        scm = new SearchConditionModel();
        scm.ItemCode = "Mingcheng";
        scm.ItemTitle = "名称";
        scm.ItemType = "System.String";
        scms.Add(scm);
    }
    else
    {
        string[] scs = _searchcondition.Split(';');
        if (scs.Length > 0)
        {
            SearchConditionModel scm = new SearchConditionModel();
            scm.ItemCode = "HuozhuID";
            scm.ItemShowName = "huozhuid";
            scm.ItemTitle = "货主";
            scm.ItemType = "货主.都有";
            if (scs.Length > 1)
            {

                scm.ItemValue = scs[0].Split(',')[1];
                if (scm.ItemValue.Length == 0)
                {
                    scm.ItemValue = "0";
                }
                scm.ItemOpValue = scs[0].Split(',')[2];
                scm.ItemJion = scs[0].Split(',')[3];
            }
            scms.Add(scm);

            scm = new SearchConditionModel();
            scm.ItemCode = "Mingcheng";
            scm.ItemTitle = "名称";
            scm.ItemType = "System.String";
            scms.Add(scm);
            if (scs.Length > 1)
            {
                scm.ItemValue = scs[1].Split(',')[1];
                scm.ItemOpValue = scs[1].Split(',')[2];
                scm.ItemJion = scs[1].Split(',')[3];
            }

        }

    }
}
<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home home-icon"></i>
            <a href="/Home">首页</a>
        </li>
        <li class="active">经销商客户</li>
    </ul>
</div>
<div id="loading"><img src="~/Imgs/wait.gif" alt="" />...系统正在加载数据,请耐心等待...</div>
<div class="page-content">
    @Html.Search_Condition(5, "收货单位_条件组合查询", "/base_shouhuodanwei/index", "base_shouhuodanweiindex", scms)
    <div class="page-header">
            <button type="button" class="btn btn-primary btn-xs btn-app radius-4" id="bt_searchInfo" data-toggle="modal" data-target="#myModal"><i class="icon-search"></i>查询</button>
            <button type="button" class="btn btn-primary btn-xs btn-app radius-4" id="bt_addInfo" onclick="AddInfo()"><i class="icon-adn"></i>新增</button>
            <button type="button" class="btn btn-primary btn-xs btn-app radius-4" id="bt_updateInfo" onclick="EditInfo()"><i class="icon-edit"></i>编辑</button>
            @*<button type="button" class="btn btn-default " id="bt_deleteInfo" onclick="DelInfo()"><i class="icon-remove"></i>删除</button>*@
            <button type="button" class="btn btn-primary btn-xs btn-app radius-4" id="bt_refreshInfo" onclick="javascript: location.reload()"><i class="icon-refresh"></i>刷新</button>
            <button type="button" class="btn btn-primary btn-xs btn-app radius-4" id="bt_sendcheck"><i class="icon-check-sign"></i>送审</button>
            <button type="button" class="btn btn-primary btn-xs btn-app radius-4" id="bt_export" onclick="javascript: window.open('/base_shouhuodanwei/recipiententityexport')"><i class="icon-inbox"></i>导出</button>
            <button type="button" class="btn btn-primary btn-xs btn-app radius-4" id="bt_gspedit"><i class="icon-eraser"></i>GSP修改</button>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="table-wapper-all">
                <div class="fixed-table-wapper">
                    <table class="table table-bordered table-condensed fixed-table-header"></table>
                </div>
                <div class="table-wapper">
                    <table class="table table-bordered table-condensed" id="mydatatable">
                        <tr>
                            <th></th>
                            <th>首营状态</th>
                            <th>经销商代码</th>
                            @*<th>货主</th>*@
                            <th>单位名称</th>
                            <th>送货地址</th>
                            <th>收货人</th>
                            <th>联系电话</th>
                            <th>营业执照编号</th>
                            <th>有效期</th>
                            <th>照片</th>
                            <th>经营许可编号</th>
                            <th>有效期</th>
                            <th>照片</th>
                            <th>订货人</th>
                            <th>订货电话</th>
                            <th>收票人</th>
                            <th>收票人电话</th>
                            <th>收票人地址</th>
                            @*<td>首营状态</td>*@
                        </tr>
                        <tbody>
                            @foreach (var item in ViewBag.base_shouhuodanwei)
                            {
                                <tr>
                                    <td>
                                        <label><input class="checkbox" type="checkbox" value="@item.ID"></label>
                                    </td>
                                    <td>@Html.GetCommonValue_ID("首营状态", (int)(item.Shouying == null ? 0 : item.Shouying))</td>
                                    @*<td>@Html.GetDataValue_ID("货主", "简称", (int)item.HuozhuID)</td>*@
                                    <td>@item.KehuDM</td>
                                    <td>@item.Mingcheng</td>
                                    <td>@item.SonghuoDZ</td>
                                    <td>@item.Lianxiren</td>
                                    <td>@item.LianxiDH</td>
                                    <td>@item.YingyezhizhaoBH</td>
                                    <td>@item.YingyezhizhaoYXQ.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <a href="/files/zhengzhao/@item.YingyezhizhaoTP" target="_blank" class="YingyezhizhaoTP"></a>
                                        <label><input type="hidden" class="val_yyzzTP" value="@item.YingyezhizhaoTP"></label>
                                    </td>
                                    <td>@item.JingyingxukeBH</td>
                                    <td>@item.JingyingxukeYXQ.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <a href="/files/zhengzhao/@item.JingyingxukeTP" target="_blank" class="JingyingxukeTP"></a>
                                        <label><input type="hidden" class="val_jyxkTP" value="@item.JingyingxukeTP"></label>
                                    </td>

                                    @*<td>@Html.GetCommonValue_ID("首营状态", (int)item.Shouying)</td>*@
                                    <td>@item.DHR</td>
                                    <td>@item.DHRDH</td>
                                    <td>@item.SPR</td>
                                    <td>@item.SPRDH</td>
                                    <td>@item.SPRDZ</td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <span class="pager">
                @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
            </span>
        </div>
    </div>
</div>
