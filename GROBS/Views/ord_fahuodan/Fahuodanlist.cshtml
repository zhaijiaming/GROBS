                                    <td>@item.Lianxiren</td>
                                    <td>@item.LianxiDH</td>
                                    <td>@item.Beizhu</td>
                                    <td>@item.CKCode</td>
                                    <td>@item.YunsongFS</td>
                                    <td>@item.Kddanhao</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <span class="pager">
                @Html.PagedListPager((IPagedList)Model, page => Url.Action("FahuodanlistPage", new { page }))
            </span>
        </div>
    </div>
</div>
